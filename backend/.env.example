# Executive Functioning Helper - Environment Configuration
# Copy this file to .env and fill in the values

# Database URL
# For development with SQLite (async):
DATABASE_URL=sqlite:///./app.db

# For production with PostgreSQL (async):
# DATABASE_URL=postgresql://user:password@localhost:5432/exec_func_helper

# JWT Secret for authentication
# Generate with: openssl rand -hex 32
JWT_SECRET=your-super-secret-key-change-in-production

# JWT Algorithm
JWT_ALGORITHM=HS256

# JWT Token expiration (in minutes)
JWT_EXPIRE_MINUTES=30

# Application settings
APP_ENV=development
DEBUG=true

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# LLM Provider settings (for agent features)
# OPENAI_API_KEY=your-openai-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key
